<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <Company>Narato</Company>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <AssemblyName>Narato.Academy.Events.API</AssemblyName>
    <OutputType>Exe</OutputType>
    <PackageId>Narato.Academy.Events.API</PackageId>
    <PackageTargetFallback>$(PackageTargetFallback);dotnet5.6;portable-net45+win8</PackageTargetFallback>
  </PropertyGroup>

  <ItemGroup>
    <None Update="Views;Areas\**\Views;nlog.config">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Narato.Academy.Events.APIContracts\Narato.Academy.Events.APIContracts.csproj" />
    <ProjectReference Include="..\Narato.Academy.Events.Domain\Narato.Academy.Events.Domain.csproj" />
    <ProjectReference Include="..\Narato.Academy.Events.DataProvider\Narato.Academy.Events.DataProvider.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Server.IISIntegration" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics" Version="1.1.2" />
    <PackageReference Include="Narato.Correlations" Version="1.0.1" />
    <PackageReference Include="Narato.ResponseMiddleware" Version="1.0.10" />
    <PackageReference Include="Narato.ExecutionTimingMiddleware" Version="1.0.1" />
    <PackageReference Include="Narato.Correlations.NlogExtensions" Version="1.0.0" />
    <PackageReference Include="Swashbuckle" Version="6.0.0-beta902" />
  </ItemGroup>

</Project>
